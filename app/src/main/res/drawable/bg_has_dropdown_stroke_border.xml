<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E1E4" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            <corners android:radius="@dimen/dp_4"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#fff" />
            <corners android:radius="@dimen/dp_4"/>

            <padding
                android:left="0dp"
                android:right="@dimen/dp_10" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#fff" />
            <corners android:radius="@dimen/dp_4"/>
        </shape>
    </item>
    <item android:gravity="center_vertical|right">
        <layer-list>
            <item android:drawable="@drawable/ic_arrow_down_grey" />
        </layer-list>
    </item>
</layer-list>