<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_base_dialog"
    android:padding="@dimen/dp_20"
    tools:ignore="HardcodedText,SpUsage">

    <boilerplate.widget.customText.TextViewFont
        android:id="@+id/tv_title"
        style="@style/StyleBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="@dimen/dp_16"
        app:layout_constraintBottom_toTopOf="@id/tv_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <boilerplate.widget.customText.TextViewFont
        android:id="@+id/tv_description"
        style="@style/StyleRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/sw_silent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <boilerplate.widget.customText.TextViewFont
        android:id="@+id/tv_leave_group"
        style="@style/StyleBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/leave_group_in_silent"
        android:textSize="@dimen/dp_14"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/sw_silent"
        app:layout_constraintEnd_toStartOf="@id/sw_silent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/sw_silent" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/sw_silent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:thumb="@drawable/bg_switch_button_thumb"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/btn_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_description"
        app:track="@drawable/bg_switch_button_track_green"
        app:useMaterialThemeColors="false" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_cancel"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_36"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/bg_button_white"
        android:gravity="center"
        android:text="@string/no"
        android:textSize="@dimen/dp_14"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_confirm"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sw_silent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_confirm"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_36"
        android:layout_marginStart="@dimen/dp_10"
        android:background="@drawable/bg_button_red"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/dp_14"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/btn_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_cancel"
        app:layout_constraintTop_toTopOf="@id/btn_cancel"
        tools:text="Giải tán" />
</androidx.constraintlayout.widget.ConstraintLayout>