<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="SpUsage,RelativeOverlap">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_EFF3F5"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctl_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/ctl_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                app:layout_constraintBottom_toTopOf="@id/ln_create_group"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintVertical_chainStyle="packed">

                <boilerplate.widget.customText.TextViewFont
                    android:id="@+id/tv_title"
                    style="@style/StyleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorWhite"
                    tools:text="@string/create_conversation" />

                <boilerplate.widget.customText.TextViewFont
                    android:id="@+id/tv_cancel"
                    style="@style/StyleRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:text="@string/cancel"
                    android:textColor="@color/colorWhite" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ln_create_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:padding="@dimen/dp_15"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/barrier_top"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ctl_toolbar"
                tools:visibility="visible">

                <FrameLayout
                    android:id="@+id/frame_chosen_image"
                    android:layout_width="@dimen/dp_46"
                    android:layout_height="@dimen/dp_46"
                    android:background="@drawable/bg_circle_border">

                    <boilerplate.widget.image.RoundedImageView
                        android:id="@+id/img_pick_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="false"
                        android:scaleType="fitXY"
                        app:radius="@dimen/dp_23" />

                    <boilerplate.widget.image.RoundedImageView
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_20"
                        android:layout_gravity="center"
                        android:padding="@dimen/dp_2"
                        app:srcCompat="@drawable/ic_camera_fill_grey" />
                </FrameLayout>

                <boilerplate.widget.customText.EditTextFont
                    android:id="@+id/edit_group_name"
                    style="@style/StyleRegular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_15"
                    android:background="@drawable/bg_border_bottom_grey"
                    android:hint="@string/hint_input_group_name"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLength="100" />
            </LinearLayout>

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:barrierMargin="@dimen/dp_10"
                app:constraint_referenced_ids="ln_create_group" />

            <LinearLayout
                android:id="@+id/ln_main"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constrainedHeight="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/frame_tablet"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/barrier_top">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_37"
                    android:background="@color/colorWhite"
                    app:layout_constraintBottom_toTopOf="@id/ln_main"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ln_create_group"
                    app:tabGravity="fill"
                    app:tabIndicatorColor="@color/colorPrimary"
                    app:tabIndicatorFullWidth="false"
                    app:tabIndicatorHeight="2dp"
                    app:tabPaddingEnd="@dimen/dp_20"
                    app:tabPaddingStart="@dimen/dp_20"
                    app:tabRippleColor="@null" />

                <RelativeLayout
                    android:id="@+id/rl_search"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_36"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10">

                    <boilerplate.widget.customText.EditTextFont
                        android:id="@+id/edit_search"
                        style="@style/StyleRegular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/tv_exit"
                        android:background="@drawable/bg_corner_white"
                        android:drawableStart="@drawable/ic_search_blue"
                        android:drawablePadding="@dimen/dp_10"
                        android:hint="@string/search"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_30"
                        android:paddingBottom="@dimen/dp_10"
                        android:textColorHint="@color/colorHint"
                        android:textSize="@dimen/dp_13" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_clear"
                        android:layout_width="@dimen/dp_17"
                        android:layout_height="@dimen/dp_17"
                        android:layout_alignEnd="@id/edit_search"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:src="@drawable/ic_clear"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <boilerplate.widget.customText.TextViewFont
                        android:id="@+id/tv_exit"
                        style="@style/StyleRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/dp_5"
                        android:padding="@dimen/dp_5"
                        android:text="@string/exit"
                        android:textColor="@color/color_4a4a4a"
                        android:textSize="@dimen/dp_13"
                        android:visibility="gone"
                        tools:visibility="visible" />
                </RelativeLayout>

                <boilerplate.widget.customText.TextViewFont
                    android:id="@+id/tv_pick_company"
                    style="@style/StyleRegular"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_36"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@drawable/bg_border_bottom_white"
                    android:drawableEnd="@drawable/ic_arrow_down_grey"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:text="@string/pick_company"
                    android:textSize="@dimen/dp_13"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <FrameLayout
                    android:id="@+id/frame_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toBottomOf="@id/barrier_bottom"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tabLayout" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcv_search"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                    <include
                        android:id="@+id/view_no_data"
                        layout="@layout/view_no_data" />
                </FrameLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/frame_tablet"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ln_main"
                app:layout_constraintTop_toTopOf="@id/barrier_top" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:id="@+id/frame_mobile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            app:behavior_hideable="false"
            app:behavior_peekHeight="?attr/actionBarSize"
            app:layout_anchor="@id/frame_mobile"
            app:layout_anchorGravity="bottom"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/ln_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:elevation="@dimen/dp_10"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            style="@style/ButtonCancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_36"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_weight="1"
            android:text="@string/no"
            android:visibility="gone"
            tools:visibility="visible" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_create"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_36"
            android:layout_weight="1"
            android:background="@drawable/state_button"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/save"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dp_13" />
    </LinearLayout>

    <boilerplate.widget.chatBox.ChatBox
        android:id="@+id/frame_chat_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:elevation="@dimen/dp_10"
        android:visibility="gone"
        tools:visibility="visible" />
</LinearLayout>