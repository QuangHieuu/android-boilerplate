<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:ignore="SpUsage">

    <RelativeLayout
        android:id="@+id/rl_toolbar"
        style="@style/AppToolbar"
        android:baselineAligned="false"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/tabLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <boilerplate.widget.customText.TextViewFont
            style="@style/StyleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/contact"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dp_16" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_birthday"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_15"
            android:padding="@dimen/dp_9"
            android:src="@drawable/ic_birthday" />

        <boilerplate.widget.customText.TextViewFont
            android:id="@+id/tv_count"
            style="@style/StyleRegular"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignEnd="@id/img_birthday"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/bg_circle_red"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:visibility="gone"
            app:autoSizeMaxTextSize="@dimen/dp_10"
            app:autoSizeMinTextSize="@dimen/dp_6"
            app:autoSizeStepGranularity="@dimen/dp_1"
            app:autoSizeTextType="uniform"
            tools:text="1"
            tools:visibility="visible" />
    </RelativeLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_37"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@id/edit_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_toolbar"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorHeight="@dimen/dp_2"
        app:tabMaxWidth="0dp"
        app:tabPaddingEnd="@dimen/dp_10"
        app:tabPaddingStart="@dimen/dp_10"
        app:tabRippleColor="@null" />

    <boilerplate.widget.customText.EditTextFont
        android:id="@+id/edit_search"
        style="@style/StyleRegular"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_36"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/bg_border_corner_white"
        android:drawableStart="@drawable/ic_search_blue"
        android:drawablePadding="@dimen/dp_10"
        android:hint="@string/search"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:maxLines="1"
        android:paddingStart="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_30"
        android:paddingBottom="@dimen/dp_10"
        android:textColorHint="@color/colorHint"
        android:textSize="@dimen/dp_13"
        android:windowSoftInputMode="adjustNothing"
        app:layout_constraintBottom_toTopOf="@id/tv_pick_company"
        app:layout_constraintEnd_toStartOf="@id/tv_exit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabLayout" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_clear"
        android:layout_width="@dimen/dp_17"
        android:layout_height="0dp"
        android:src="@drawable/ic_clear"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/edit_search"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="@id/edit_search"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintStart_toStartOf="@id/edit_search"
        app:layout_constraintTop_toTopOf="@id/edit_search" />

    <boilerplate.widget.customText.TextViewFont
        android:id="@+id/tv_exit"
        style="@style/StyleRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_10"
        android:padding="@dimen/dp_5"
        android:text="@string/exit"
        android:textColor="@color/color_4a4a4a"
        android:textSize="@dimen/dp_13"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/edit_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/edit_search"
        app:layout_constraintTop_toTopOf="@id/edit_search" />

    <boilerplate.widget.customText.TextViewFont
        android:id="@+id/tv_pick_company"
        style="@style/StyleRegular"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_36"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/bg_border_corner_white_grey"
        android:drawableEnd="@drawable/ic_arrow_down_grey"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingStart="@dimen/dp_10"
        android:paddingTop="@dimen/dp_7"
        android:paddingEnd="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_7"
        android:text="@string/pick_company"
        android:textSize="@dimen/dp_13"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/frame_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_search" />

    <FrameLayout
        android:id="@+id/frame_search"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_pick_company">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <include layout="@layout/view_no_data" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>