<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_base_dialog"
    android:padding="@dimen/dp_20"
    tools:ignore="HardcodedText,SpUsage">

    <FrameLayout
        android:id="@+id/frame_chosen_image"
        android:layout_width="@dimen/dp_71"
        android:layout_height="@dimen/dp_71"
        app:layout_constraintBottom_toTopOf="@id/tv_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <boilerplate.widget.image.RoundedImageView
            android:id="@+id/img_avatar"
            android:layout_width="@dimen/dp_71"
            android:layout_height="@dimen/dp_71"
            android:layout_gravity="center"
            app:radius="@dimen/dp_35" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_pick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_circle_border"
            android:padding="@dimen/dp_23"
            app:srcCompat="@drawable/ic_camera_fill_grey" />
    </FrameLayout>

    <boilerplate.widget.customText.TextViewFont
        android:id="@+id/tv_description"
        style="@style/StyleRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_30"
        android:text="@string/warning_change_inform"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/edt_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frame_chosen_image" />

    <boilerplate.widget.customText.EditTextFont
        android:id="@+id/edt_name"
        style="@style/StyleRegular"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_36"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="@drawable/state_edit_text"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxLength="100"
        android:maxLines="1"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:singleLine="true"
        android:textColor="@color/color_323232"
        app:layout_constraintBottom_toTopOf="@id/btn_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_description"
        tools:text="asdf" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_cancel"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_36"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/bg_button_white"
        android:gravity="center"
        android:text="@string/cancel"
        android:textSize="@dimen/dp_14"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_confirm"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_name" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_confirm"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_36"
        android:layout_marginStart="@dimen/dp_10"
        android:background="@drawable/bg_button"
        android:gravity="center"
        android:text="@string/update"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/dp_14"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/btn_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_cancel"
        app:layout_constraintTop_toTopOf="@id/btn_cancel" />
</androidx.constraintlayout.widget.ConstraintLayout>