<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ctl_pin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="SpUsage">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_pin"
        android:layout_width="@dimen/dp_36"
        android:layout_height="0dp"
        android:padding="@dimen/dp_10"
        android:src="@drawable/ic_pin_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toStartOf="@id/picker_pin"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:barrierDirection="end"
        app:constraint_referenced_ids="img_pin" />

    <LinearLayout
        android:id="@+id/picker_pin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/tv_pin_content"
        app:layout_constraintEnd_toStartOf="@id/img_remove_pin"
        app:layout_constraintHeight="wrap_content"
        app:layout_constraintStart_toStartOf="@id/barrier_start"
        app:layout_constraintTop_toTopOf="parent" />

    <boilerplate.widget.customText.TextViewFont
        android:id="@+id/tv_pin_content"
        style="@style/StyleRegular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:maxLines="1"
        android:textSize="@dimen/dp_12"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/tv_from_person"
        app:layout_constraintEnd_toStartOf="@id/img_remove_pin"
        app:layout_constraintStart_toStartOf="@id/barrier_start"
        app:layout_constraintTop_toBottomOf="@id/picker_pin"
        app:layout_goneMarginTop="@dimen/dp_5" />

    <boilerplate.widget.customText.TextViewFont
        android:id="@+id/tv_from_person"
        style="@style/StyleRegular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:textColor="@color/color_7589A3"
        android:textSize="@dimen/dp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/img_remove_pin"
        app:layout_constraintStart_toStartOf="@id/barrier_start"
        app:layout_constraintTop_toBottomOf="@id/tv_pin_content" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_remove_pin"
        android:layout_width="@dimen/dp_36"
        android:layout_height="0dp"
        android:padding="@dimen/dp_10"
        android:src="@drawable/ic_menu_dot_horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>