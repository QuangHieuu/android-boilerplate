<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/colorWhite"
    android:elevation="@dimen/dp_12"
    android:paddingBottom="@dimen/dp_10">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctl_chat_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_5"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_attachment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/bg_border_bottom_grey"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="@id/barrier_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_max="@dimen/dp_90"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1"
            tools:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_mention"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="@id/barrier_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_max="@dimen/dp_200"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1"
            tools:visibility="visible" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="top"
            app:constraint_referenced_ids="edt_message" />

        <boilerplate.widget.customText.EditTextFont
            android:id="@+id/edt_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:hint="@string/hint_input_message"
            android:inputType="textMultiLine"
            android:maxHeight="@dimen/dp_72"
            android:minHeight="@dimen/dp_36"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:scrollbars="vertical"
            android:textColorHint="@color/color_8F8E94"
            android:textCursorDrawable="@drawable/bg_cursor"
            app:layout_constraintBottom_toBottomOf="@id/barrier_bottom"
            app:layout_constraintEnd_toStartOf="@id/img_record"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/barrier_edit"
            app:layout_goneMarginTop="@dimen/dp_10" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_record"
            android:layout_width="@dimen/dp_32"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/dp_10"
            android:padding="@dimen/dp_7"
            android:src="@drawable/ic_microphone_grey"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/edt_message"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/edt_message"
            app:layout_constraintTop_toTopOf="@id/edt_message" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="edt_message" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_attachment"
            android:layout_width="@dimen/dp_45"
            android:layout_height="0dp"
            android:paddingStart="@dimen/dp_11"
            android:paddingTop="@dimen/dp_11"
            android:paddingEnd="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_11"
            android:src="@drawable/ic_attachment"
            app:layout_constraintBottom_toBottomOf="@id/barrier_record"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toStartOf="@id/img_pick_image"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/barrier_bottom" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_pick_image"
            android:layout_width="@dimen/dp_45"
            android:layout_height="0dp"
            android:padding="@dimen/dp_11"
            android:src="@drawable/ic_pick_image"
            app:layout_constraintBottom_toBottomOf="@id/barrier_record"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toStartOf="@id/img_take_photo"
            app:layout_constraintStart_toEndOf="@id/img_attachment"
            app:layout_constraintTop_toTopOf="@id/barrier_bottom" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_take_photo"
            android:layout_width="@dimen/dp_45"
            android:layout_height="0dp"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_camera"
            app:layout_constraintBottom_toBottomOf="@id/barrier_record"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toStartOf="@id/img_email"
            app:layout_constraintStart_toEndOf="@id/img_pick_image"
            app:layout_constraintTop_toTopOf="@id/barrier_bottom" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_email"
            android:layout_width="@dimen/dp_45"
            android:layout_height="0dp"
            android:padding="@dimen/dp_11"
            android:src="@drawable/ic_email"
            app:layout_constraintBottom_toBottomOf="@id/barrier_record"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toStartOf="@id/img_sms"
            app:layout_constraintStart_toEndOf="@id/img_take_photo"
            app:layout_constraintTop_toTopOf="@id/barrier_bottom" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_sms"
            android:layout_width="@dimen/dp_45"
            android:layout_height="0dp"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_sms"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/barrier_record"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="@id/guideline"
            app:layout_constraintStart_toEndOf="@id/img_email"
            app:layout_constraintTop_toTopOf="@id/barrier_bottom" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:barrierDirection="end"
            app:constraint_referenced_ids="img_sms" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btn_cancel_edit"
            android:layout_width="@dimen/dp_36"
            android:layout_height="0dp"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_close"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/barrier_record"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toStartOf="@id/btn_send"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toTopOf="@id/barrier_bottom" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_send"
            android:layout_width="@dimen/dp_36"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/state_send"
            android:enabled="false"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/barrier_record"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toTopOf="@id/barrier_bottom" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btn_send_like"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_36"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/dp_10"
            android:padding="@dimen/dp_5"
            android:src="@drawable/ic_send_like"
            app:layout_constraintBottom_toBottomOf="@id/barrier_record"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toTopOf="@id/barrier_bottom"
            app:layout_constraintVertical_bias="0.5" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="@dimen/dp_36"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/dp_10"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/barrier_record"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toTopOf="@id/barrier_bottom" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="img_email" />

        <boilerplate.widget.customText.TextViewFont
            android:id="@+id/tv_record_title"
            style="@style/StyleRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="@string/record_action"
            android:textColor="@color/color_59323232"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/img_start_record"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/barrier_record"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_start_record"
            android:layout_width="@dimen/dp_50"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/bg_circle_border"
            android:padding="@dimen/dp_13"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/sw_mode_record"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_record_title"
            app:srcCompat="@drawable/ic_microphone_fill"
            tools:visibility="visible" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/sw_mode_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:thumb="@drawable/bg_switch_button_thumb"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_sw_mode"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_start_record"
            app:track="@drawable/bg_switch_button_track"
            app:useMaterialThemeColors="false"
            tools:visibility="visible" />

        <boilerplate.widget.customText.TextViewFont
            android:id="@+id/tv_sw_mode"
            style="@style/StyleRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:text="@string/record_mode"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/sw_mode_record"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/sw_mode_record"
            app:layout_constraintTop_toTopOf="@id/sw_mode_record"
            tools:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctl_audio_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_10"
        android:visibility="gone"
        tools:visibility="gone">

        <boilerplate.widget.customText.TextViewFont
            android:id="@+id/tv_record"
            style="@style/StyleRegular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/audio_message"
            app:layout_constraintBottom_toBottomOf="@id/img_icon_record"
            app:layout_constraintEnd_toStartOf="@id/img_icon_record"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/img_icon_record" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_icon_record"
            android:layout_width="@dimen/dp_36"
            android:layout_height="0dp"
            android:padding="@dimen/dp_7"
            android:src="@drawable/ic_microphone"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_record"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progress_bar_audio"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="100"
            app:layout_constraintBottom_toTopOf="@id/barrier_audio"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_icon_record"
            tools:progress="50" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:barrierMargin="@dimen/dp_10"
            app:constraint_referenced_ids="progress_bar_audio" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_stop_audio"
            android:layout_width="@dimen/dp_25"
            android:layout_height="0dp"
            android:padding="@dimen/dp_8"
            android:src="@drawable/ic_close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toStartOf="@id/tv_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/barrier_audio" />

        <boilerplate.widget.customText.TextViewFont
            android:id="@+id/tv_time"
            style="@style/StyleRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.65"
            app:layout_constraintBottom_toBottomOf="@id/img_stop_audio"
            app:layout_constraintStart_toEndOf="@id/img_stop_audio"
            app:layout_constraintTop_toTopOf="@id/img_stop_audio"
            tools:text="0:02" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_send_audio"
            android:layout_width="@dimen/dp_36"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/state_send"
            android:enabled="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/barrier_audio" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <boilerplate.widget.customText.TextViewFont
        android:id="@+id/tv_disable"
        style="@style/StyleRegular"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="@string/warning_disable_chat_box"
        android:textColor="@color/color_7589A3"
        android:visibility="gone" />
</FrameLayout>