<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ln_contact_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:ignore="SpUsage">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ln_header"
                style="@style/AppToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_back"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_26"
                    android:layout_marginTop="@dimen/dp_10"
                    android:padding="@dimen/dp_8"
                    android:src="@drawable/ic_arrow_previous_white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.03"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.03" />

                <boilerplate.widget.image.RoundedImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toTopOf="@id/tv_name"
                    app:layout_constraintDimensionRatio="3:4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:radius="@dimen/dp_4"
                    tools:src="@drawable/ic_avatar_group" />

                <boilerplate.widget.customText.TextViewFont
                    android:id="@+id/tv_name"
                    style="@style/StyleRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dp_14"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toTopOf="@id/tv_department"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/img_avatar"
                    tools:text="name" />

                <boilerplate.widget.customText.TextViewFont
                    android:id="@+id/tv_department"
                    style="@style/StyleRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_A2FFFFFF"
                    android:textSize="@dimen/dp_13"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toTopOf="@id/tv_message"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_name"
                    app:layout_goneMarginBottom="@dimen/dp_10"
                    tools:text="name" />

                <boilerplate.widget.customText.TextViewFont
                    android:id="@+id/tv_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@drawable/bg_border_corner_transparent"
                    android:drawableStart="@drawable/ic_message"
                    android:drawablePadding="@dimen/dp_5"
                    android:padding="@dimen/dp_10"
                    android:text="@string/message"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dp_13"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_send_sms"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_department" />

                <boilerplate.widget.customText.TextViewFont
                    android:id="@+id/tv_send_sms"
                    style="@style/StyleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:background="@drawable/bg_border_corner_transparent"
                    android:drawableStart="@drawable/ic_sms_white"
                    android:drawablePadding="@dimen/dp_5"
                    android:padding="@dimen/dp_10"
                    android:text="@string/send_sms"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dp_13"
                    app:layout_constraintBottom_toBottomOf="@id/tv_message"
                    app:layout_constraintEnd_toStartOf="@id/tv_phone_call"
                    app:layout_constraintStart_toEndOf="@id/tv_message"
                    app:layout_constraintTop_toTopOf="@id/tv_message" />

                <boilerplate.widget.customText.TextViewFont
                    android:id="@+id/tv_phone_call"
                    style="@style/StyleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_border_corner_transparent"
                    android:drawableStart="@drawable/ic_phone_white"
                    android:drawablePadding="@dimen/dp_5"
                    android:padding="@dimen/dp_10"
                    android:text="@string/phone_call"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dp_13"
                    app:layout_constraintBottom_toBottomOf="@id/tv_message"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_send_sms"
                    app:layout_constraintTop_toTopOf="@id/tv_message" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/ln_information"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/dp_15"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ln_header" />
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_edit_information"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:layout_margin="@dimen/dp_15"
        android:background="@drawable/bg_button_blue"
        android:gravity="center"
        android:text="@string/edit_information"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/dp_14"
        android:textStyle="bold"
        android:visibility="gone" />
</LinearLayout>