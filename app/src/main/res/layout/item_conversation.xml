<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_72"
    app:leftEdgeSwipeOffset="0dp"
    app:rightEdgeSwipeOffset="0dp"
    app:show_mode="lay_down"
    tools:ignore="SpUsage">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ln_pin"
            android:layout_width="@dimen/dp_61"
            android:layout_height="match_parent"
            android:background="@color/color_1552DC"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_10"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_layout_pin"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_gravity="center"
                android:padding="@dimen/dp_5"
                android:src="@drawable/ic_pin_version_2_white" />

            <boilerplate.widget.customText.TextViewFont
                android:id="@+id/tv_pin"
                style="@style/StyleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/pin"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dp_10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_copy"
            android:layout_width="@dimen/dp_61"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_10"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_copy"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_gravity="center"
                android:padding="@dimen/dp_5"
                android:src="@drawable/ic_duplicate" />

            <boilerplate.widget.customText.TextViewFont
                android:id="@+id/tv_copy"
                style="@style/StyleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/duplication"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dp_10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_mark"
            android:layout_width="@dimen/dp_61"
            android:layout_height="match_parent"
            android:background="@color/color_ED8A19"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_10">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_mark"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_gravity="center"
                android:padding="@dimen/dp_5"
                android:src="@drawable/ic_bookmark_white" />

            <boilerplate.widget.customText.TextViewFont
                android:id="@+id/tv_mark"
                style="@style/StyleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dp_10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_notify"
            android:layout_width="@dimen/dp_61"
            android:layout_height="match_parent"
            android:background="@color/color_9B9B9B"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_10">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_notify"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_gravity="center"
                android:padding="@dimen/dp_5" />

            <boilerplate.widget.customText.TextViewFont
                android:id="@+id/tv_notify"
                style="@style/StyleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dp_10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_delete"
            android:layout_width="@dimen/dp_61"
            android:layout_height="match_parent"
            android:background="@color/color_E80808"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_10">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_gravity="center"
                android:padding="@dimen/dp_5"
                app:srcCompat="@drawable/ic_trash" />

            <boilerplate.widget.customText.TextViewFont
                style="@style/StyleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dp_12" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_conversation_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_72"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <RelativeLayout
            android:id="@+id/rl_avatar_group"
            android:layout_width="@dimen/dp_46"
            android:layout_height="@dimen/dp_46"
            android:layout_centerVertical="true" />

        <FrameLayout
            android:id="@+id/frame_user_online"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_alignEnd="@id/rl_avatar_group"
            android:layout_alignBottom="@id/rl_avatar_group"
            android:background="@drawable/state_user_online"
            android:visibility="gone"
            tools:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toEndOf="@id/rl_avatar_group"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end"
                android:orientation="horizontal">

                <boilerplate.widget.customText.TextViewFont
                    android:id="@+id/tv_conversation_name"
                    style="@style/StyleMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="@dimen/dp_14"
                    tools:text="ten hoi thoai" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_no_notify"
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_14"
                    android:layout_marginStart="@dimen/dp_10"
                    android:src="@drawable/ic_notification_off"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <boilerplate.widget.customText.TextViewFont
                    android:id="@+id/tv_last_active"
                    style="@style/StyleRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:textColor="@color/color_7589A3"
                    android:textSize="@dimen/dp_12"
                    android:visibility="gone"
                    tools:text="08/07/2022"
                    tools:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center_vertical|end"
                android:orientation="horizontal">

                <boilerplate.widget.customText.TextViewFont
                    android:id="@+id/tv_content"
                    style="@style/StyleRegular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/color_959595"
                    android:visibility="gone"
                    tools:text="noi dung" />

                <boilerplate.widget.customText.TextViewFont
                    android:id="@+id/tv_unread"
                    style="@style/StyleRegular"
                    android:layout_width="@dimen/dp_19"
                    android:layout_height="@dimen/dp_14"
                    android:layout_marginStart="@dimen/dp_5"
                    android:background="@drawable/bg_square_red"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dp_9"
                    android:visibility="gone"
                    tools:text="1"
                    tools:visibility="visible" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_bookmark"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_5"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_bookmark"
                    tools:visibility="visible" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_pin"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_5"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_pin_version_2"
                    tools:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</com.daimajia.swipe.SwipeLayout>