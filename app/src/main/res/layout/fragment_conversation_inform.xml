<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAppBackground"
    android:orientation="vertical"
    tools:ignore="SpUsage">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        style="@style/AppToolbar"
        android:layout_width="match_parent"
        app:navigationIcon="@drawable/ic_arrow_previous_white"
        app:title="Thông tin hội thoại" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingTop="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_20">

                <RelativeLayout
                    android:id="@+id/rl_avatar_group"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_68"
                    app:layout_constraintBottom_toBottomOf="@id/barrier"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <FrameLayout
                    android:id="@+id/frame_user_online"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="0dp"
                    android:background="@drawable/state_user_online"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/rl_avatar_group"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintEnd_toEndOf="@id/rl_avatar_group"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintStart_toStartOf="@id/rl_avatar_group"
                    app:layout_constraintTop_toTopOf="@id/rl_avatar_group"
                    app:layout_constraintVertical_bias="1"
                    tools:visibility="visible" />

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:barrierMargin="@dimen/dp_10"
                    app:constraint_referenced_ids="rl_avatar_group" />

                <boilerplate.widget.customText.TextViewFont
                    android:id="@+id/tv_conversation_name"
                    style="@style/StyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textSize="@dimen/dp_16"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/barrier"
                    app:layout_constraintWidth_max="@dimen/dp_240"
                    tools:text="Nhóm phát triển nâng cấp Chat - Eoffice" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_edit_name"
                    android:layout_width="@dimen/dp_26"
                    android:layout_height="@dimen/dp_26"
                    android:background="@drawable/bg_circle"
                    android:padding="@dimen/dp_6"
                    android:src="@drawable/ic_edit_ver_1_blue"
                    app:layout_constraintBottom_toBottomOf="@id/tv_conversation_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@id/tv_conversation_name"
                    app:layout_constraintTop_toTopOf="@id/tv_conversation_name" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/colorWhite"
                android:padding="@dimen/dp_15">

                <boilerplate.widget.customText.TextViewFont
                    android:id="@+id/tv_inform"
                    style="@style/StyleBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/img_drop_down"
                    android:layout_alignBottom="@id/img_drop_down"
                    android:layout_toStartOf="@id/img_drop_down"
                    android:gravity="center_vertical"
                    android:text="@string/general_inform"
                    android:textAllCaps="true"
                    android:textSize="@dimen/dp_12" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_drop_down"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentEnd="true"
                    android:padding="@dimen/dp_6"
                    app:srcCompat="@drawable/ic_arrow_expand" />

                <LinearLayout
                    android:id="@+id/ln_inform"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_inform"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/colorWhite"
                android:padding="@dimen/dp_15">

                <boilerplate.widget.customText.TextViewFont
                    android:id="@+id/tv_img"
                    style="@style/StyleBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/img_file_image_drop"
                    android:layout_alignBottom="@id/img_file_image_drop"
                    android:layout_toStartOf="@id/img_file_image_drop"
                    android:gravity="center_vertical"
                    android:text="@string/image"
                    android:textAllCaps="true"
                    android:textSize="@dimen/dp_12" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_file_image_drop"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentEnd="true"
                    android:padding="@dimen/dp_6"
                    app:srcCompat="@drawable/ic_arrow_expand" />

                <FrameLayout
                    android:id="@+id/frame_content_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_img"
                    android:layout_centerVertical="true">

                    <boilerplate.widget.customText.TextViewFont
                        android:id="@+id/tv_no_image"
                        style="@style/StyleRegular"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_62"
                        android:gravity="center"
                        android:text="@string/no_image_conversation"
                        android:textAlignment="center"
                        android:textColor="@color/color_828282"
                        android:visibility="gone" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_file_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_5"
                        android:overScrollMode="never"
                        android:paddingStart="-6dp"
                        android:paddingEnd="-6dp"
                        android:visibility="gone"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:spanCount="3" />

                    <androidx.core.widget.ContentLoadingProgressBar
                        android:id="@+id/view_loading_image"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="@dimen/dp_35"
                        android:layout_height="@dimen/dp_35"
                        android:layout_gravity="center" />
                </FrameLayout>

                <boilerplate.widget.customText.TextViewFont
                    android:id="@+id/tv_more_image"
                    style="@style/StyleRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/frame_content_image"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_button_grey"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_6"
                    android:text="@string/see_all"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/colorWhite"
                android:padding="@dimen/dp_15">

                <boilerplate.widget.customText.TextViewFont
                    android:id="@+id/tv_file"
                    style="@style/StyleBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/img_file_drop"
                    android:layout_alignBottom="@id/img_file_drop"
                    android:layout_toStartOf="@id/img_file_drop"
                    android:gravity="center_vertical"
                    android:text="@string/document_conversation"
                    android:textAllCaps="true"
                    android:textSize="@dimen/dp_12" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_file_drop"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentEnd="true"
                    android:padding="@dimen/dp_6"
                    app:srcCompat="@drawable/ic_arrow_expand" />

                <FrameLayout
                    android:id="@+id/frame_content_file"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_file"
                    android:layout_centerHorizontal="true"
                    app:layout_constrainedHeight="true"
                    app:layout_constraintBottom_toTopOf="@id/tv_more_file"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_file">

                    <boilerplate.widget.customText.TextViewFont
                        android:id="@+id/tv_no_file"
                        style="@style/StyleRegular"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_62"
                        android:gravity="center"
                        android:text="@string/no_file_conversation"
                        android:textAlignment="center"
                        android:textColor="@color/color_828282"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/ln_file"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:orientation="vertical"
                        android:visibility="gone" />

                    <androidx.core.widget.ContentLoadingProgressBar
                        android:id="@+id/view_loading_file"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="@dimen/dp_35"
                        android:layout_height="@dimen/dp_35"
                        android:layout_gravity="center" />
                </FrameLayout>

                <boilerplate.widget.customText.TextViewFont
                    android:id="@+id/tv_more_file"
                    style="@style/StyleRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/frame_content_file"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_button_grey"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_6"
                    android:text="@string/see_all"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/colorWhite"
                android:padding="@dimen/dp_15">

                <boilerplate.widget.customText.TextViewFont
                    android:id="@+id/tv_link"
                    style="@style/StyleBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/img_link_drop"
                    android:layout_alignBottom="@id/img_link_drop"
                    android:layout_toStartOf="@id/img_link_drop"
                    android:gravity="center_vertical"
                    android:text="@string/link"
                    android:textAllCaps="true"
                    android:textSize="@dimen/dp_12" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_link_drop"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentEnd="true"
                    android:padding="@dimen/dp_6"
                    app:srcCompat="@drawable/ic_arrow_expand" />

                <FrameLayout
                    android:id="@+id/frame_content_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_link"
                    android:layout_centerHorizontal="true">

                    <boilerplate.widget.customText.TextViewFont
                        android:id="@+id/tv_no_link"
                        style="@style/StyleRegular"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_62"
                        android:gravity="center"
                        android:text="@string/no_link_conversation"
                        android:textAlignment="center"
                        android:textColor="@color/color_828282"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/ln_link"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:orientation="vertical"
                        android:visibility="gone" />

                    <androidx.core.widget.ContentLoadingProgressBar
                        android:id="@+id/view_loading_link"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="@dimen/dp_35"
                        android:layout_height="@dimen/dp_35"
                        android:layout_gravity="center" />
                </FrameLayout>

                <boilerplate.widget.customText.TextViewFont
                    android:id="@+id/tv_more_link"
                    style="@style/StyleRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/frame_content_link"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_button_grey"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_6"
                    android:text="@string/see_all"
                    android:visibility="gone" />
            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ctl_other_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/colorWhite"
                android:padding="@dimen/dp_15">

                <boilerplate.widget.customText.TextViewFont
                    android:id="@+id/tv_setting"
                    style="@style/StyleBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/other_setting"
                    android:textAllCaps="true"
                    android:textSize="@dimen/dp_12"
                    app:layout_constraintBottom_toTopOf="@id/ln_setting"
                    app:layout_constraintEnd_toStartOf="@id/img_setting_drop_down"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_setting_drop_down"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="0dp"
                    android:padding="@dimen/dp_6"
                    app:layout_constraintBottom_toBottomOf="@id/tv_setting"
                    app:layout_constraintDimensionRatio="2W:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_setting"
                    app:layout_constraintTop_toTopOf="@id/tv_setting"
                    app:srcCompat="@drawable/ic_arrow_expand" />

                <LinearLayout
                    android:id="@+id/ln_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/img_setting_drop_down" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>