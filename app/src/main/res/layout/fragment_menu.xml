<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="SpUsage">

    <LinearLayout
        android:id="@+id/toolbar"
        style="@style/AppToolbar"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/btn_back_to_dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_square_border"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_5">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_15"
                android:src="@drawable/ic_arrow_direction_left" />

            <boilerplate.widget.customText.TextViewFont
                style="@style/StyleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:text="@string/home"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_15">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_2"
                android:src="@drawable/ic_role" />

            <View
                android:id="@+id/view_notify_role"
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_7"
                android:layout_gravity="end|top"
                android:background="@drawable/bg_circle_red"
                android:visibility="gone"
                tools:visibility="visible" />
        </FrameLayout>

        <boilerplate.widget.customText.TextViewFont
            style="@style/StyleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/roles" />

        <boilerplate.widget.customText.TextViewFont
            android:id="@+id/tv_role"
            style="@style/StyleBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/roles"
            android:textAlignment="viewEnd" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_role"
            android:layout_width="@dimen/dp_25"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_down_grey" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_menu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorWhite"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
</LinearLayout>