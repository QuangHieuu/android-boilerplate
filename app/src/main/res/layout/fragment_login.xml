<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    tools:ignore="SpUsage">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_app_icon"
        android:layout_width="@dimen/dp_300"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:layout_constraintBottom_toTopOf="@id/guideline1"
        app:layout_constraintDimensionRatio="3:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/ic_app_logo" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_username"
        android:layout_width="@dimen/dp_25"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_10"
        android:src="@drawable/ic_login_user_name"
        app:layout_constraintBottom_toBottomOf="@id/edt_username"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toStartOf="@id/tv_input_name"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_input_name"
        app:layout_constraintVertical_bias="0" />

    <gg.it.widget.customText.TextViewFont
        android:id="@+id/tv_input_name"
        style="@style/StyleMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_login"
        android:textAllCaps="true"
        app:layout_constraintBottom_toTopOf="@id/edt_username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_username"
        app:layout_constraintTop_toTopOf="@id/guideline1"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintVertical_chainStyle="packed" />

    <gg.it.widget.customText.EditTextFont
        android:id="@+id/edt_username"
        style="@style/StyleRegular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_20"
        android:hint="@string/text_hint_username"
        android:inputType="text"
        android:maxLines="1"
        android:paddingStart="@dimen/dp_2"
        android:paddingEnd="@dimen/dp_20"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorHint"
        android:textSize="@dimen/dp_18"
        app:layout_constraintBottom_toTopOf="@id/tv_input_pass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_input_name"
        app:layout_constraintTop_toBottomOf="@id/tv_input_name" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_clear_username"
        android:layout_width="@dimen/dp_18"
        android:layout_height="0dp"
        android:src="@drawable/ic_clear"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/edt_username"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="@id/edt_username"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="@id/edt_username"
        app:layout_constraintTop_toTopOf="@id/edt_username" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_password"
        android:layout_width="@dimen/dp_25"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_10"
        android:src="@drawable/ic_login_password"
        app:layout_constraintBottom_toBottomOf="@id/edt_password"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toStartOf="@id/tv_input_pass"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_input_pass"
        app:layout_constraintVertical_bias="0" />

    <gg.it.widget.customText.TextViewFont
        android:id="@+id/tv_input_pass"
        style="@style/StyleMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/text_password"
        android:textAllCaps="true"
        app:layout_constraintBottom_toTopOf="@id/edt_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_password"
        app:layout_constraintTop_toBottomOf="@id/edt_username" />

    <gg.it.widget.customText.EditTextFont
        android:id="@+id/edt_password"
        style="@style/StyleRegular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_20"
        android:gravity="top"
        android:hint="@string/text_hint_password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingStart="@dimen/dp_2"
        android:paddingEnd="@dimen/dp_20"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorHint"
        android:textSize="@dimen/dp_18"
        app:layout_constraintBottom_toTopOf="@id/btn_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_input_pass"
        app:layout_constraintTop_toBottomOf="@id/tv_input_pass" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_show_pass"
        android:layout_width="@dimen/dp_25"
        android:layout_height="0dp"
        android:padding="@dimen/dp_3"
        android:src="@drawable/ic_eye_grey"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/edt_password"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="@id/edt_password"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="@id/edt_password"
        app:layout_constraintTop_toTopOf="@id/edt_password"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_clear_pass"
        android:layout_width="@dimen/dp_18"
        android:layout_height="0dp"
        android:src="@drawable/ic_clear"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/edt_password"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="@id/edt_password"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="@id/edt_password"
        app:layout_constraintTop_toTopOf="@id/edt_password" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@drawable/state_button_login"
        android:enabled="false"
        android:paddingTop="@dimen/dp_13"
        android:paddingBottom="@dimen/dp_13"
        android:text="@string/text_login_button"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="@id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_password" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <gg.it.widget.customText.TextViewFont
        android:id="@+id/tv_version"
        style="@style/StyleRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:text="@string/text_app_full_name"
        android:textAlignment="center"
        android:textSize="@dimen/dp_12"
        app:layout_constraintBottom_toTopOf="@id/tv_copy_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline2"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed" />

    <gg.it.widget.customText.TextViewFont
        android:id="@+id/tv_copy_right"
        style="@style/StyleRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_copy_right"
        android:textAlignment="center"
        android:textSize="@dimen/dp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_version" />
</androidx.constraintlayout.widget.ConstraintLayout>
