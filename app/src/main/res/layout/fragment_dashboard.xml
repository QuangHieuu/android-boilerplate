<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ctl_dashboard_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dashboard">

    <boilerplate.widget.image.RoundedImageView
        android:id="@+id/img_avatar"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_15"
        android:src="@drawable/ic_avatar"
        app:layout_constraintBottom_toBottomOf="@id/barrier_header"
        app:layout_constraintEnd_toStartOf="@id/tv_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:radius="@dimen/dp_15" />

    <View
        android:id="@+id/view_notify_role"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_7"
        android:background="@drawable/bg_circle_red"
        android:visibility="gone"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/img_avatar"
        app:layout_constraintTop_toTopOf="@+id/img_avatar"
        tools:visibility="visible" />

    <boilerplate.widget.customText.TextViewFont
        android:id="@+id/tv_name"
        style="@style/StyleMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:textSize="@dimen/dp_13"
        app:layout_constraintBottom_toTopOf="@id/tv_role"
        app:layout_constraintStart_toEndOf="@id/img_avatar"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nguyễn Thành Luân" />

    <boilerplate.widget.customText.TextViewFont
        android:id="@+id/tv_role"
        style="@style/StyleRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/dp_13"
        app:layout_constraintBottom_toBottomOf="@id/barrier_header"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        tools:text="Trưởng phòng" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@id/tv_name"
        app:layout_constraintStart_toEndOf="@id/tv_name"
        app:layout_constraintTop_toTopOf="@id/tv_name"
        app:srcCompat="@drawable/ic_arrow_down_grey" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_notify"
        android:layout_width="@dimen/dp_20"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@id/barrier_header"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toStartOf="@id/img_filter_work"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_notification_on_black" />

    <View
        android:id="@+id/view_notify"
        style="@style/StyleRegular"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_7"
        android:background="@drawable/bg_circle_red"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/img_notify"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="@id/img_notify"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="@id/img_notify"
        app:layout_constraintTop_toTopOf="@id/img_notify"
        app:layout_constraintVertical_bias="0"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_filter_work"
        android:layout_width="@dimen/dp_20"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_15"
        android:src="@drawable/ic_search_black"
        app:layout_constraintBottom_toBottomOf="@id/barrier_header"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_notify"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:barrierMargin="@dimen/dp_10"
        app:constraint_referenced_ids="img_avatar,tv_name,img_notify,img_filter_work" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_dashboard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barrier_header">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcl_today_work"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:padding="@dimen/dp_15"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
