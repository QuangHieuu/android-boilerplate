<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAppBackground"
    tools:ignore="SpUsage,HardcodedText">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_message"
        style="@style/AppToolbar"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        app:menu="@menu/menu_message"
        app:title="@string/message"
        app:titleTextAppearance="@style/AppToolbar.Title" />

    <boilerplate.widget.customText.TextViewFont
        android:id="@+id/tv_pending"
        style="@style/StyleRegular"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:background="@color/color_ED8A19"
        android:gravity="center"
        android:text="@string/warning_update_message_offline"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/dp_14"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/tv_filter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_message" />

    <boilerplate.widget.customText.TextViewFont
        android:id="@+id/tv_filter"
        style="@style/StyleRegular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_message"
        android:layout_centerInParent="true"
        android:background="@color/colorWhite"
        android:drawableEnd="@drawable/ic_close"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_10"
        android:visibility="gone"
        tools:text="filter"
        tools:visibility="visible" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_filter"
        android:layout_centerInParent="true"
        android:background="@color/colorWhite">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <include
                android:id="@+id/view_no_data"
                layout="@layout/view_no_data" />

            <boilerplate.widget.customText.TextViewFont
                android:id="@+id/tv_no_connection"
                style="@style/StyleRegular"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:background="@color/color_toast_fail"
                android:gravity="center"
                android:text="@string/no_connection"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dp_14"
                android:visibility="gone" />
        </FrameLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_menu_create_group"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_alignBottom="@id/swipe_layout"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/colorPrimary"
        android:contentDescription="Menu tạo nhóm"
        android:elevation="@dimen/dp_10"
        android:enabled="true"
        android:src="@drawable/ic_group_create"
        app:backgroundTint="@color/colorPrimary"
        app:fabCustomSize="@dimen/dp_50"
        app:pressedTranslationZ="@dimen/dp_12"
        app:rippleColor="@color/colorWhite" />
</RelativeLayout>