<?xml version="1.0" encoding="utf-8"?>
<com.smarteist.autoimageslider.SliderView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliderView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_120"
    app:sliderAnimationDuration="600"
    app:sliderAutoCycleDirection="back_and_forth"
    app:sliderAutoCycleEnabled="true"
    app:sliderIndicatorAnimationDuration="600"
    app:sliderIndicatorGravity="center_horizontal|bottom"
    app:sliderIndicatorMargin="@dimen/dp_15"
    app:sliderIndicatorOrientation="horizontal"
    app:sliderIndicatorPadding="@dimen/dp_3"
    app:sliderIndicatorRadius="@dimen/dp_2"
    app:sliderIndicatorSelectedColor="@color/colorPrimary"
    app:sliderIndicatorUnselectedColor="@color/colorAppBackground"
    app:sliderScrollTimeInSec="1"
    app:sliderStartAutoCycle="true" />