<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAppBackground"
    android:orientation="vertical"
    tools:ignore="SpUsage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctl_toolbar"
        style="@style/AppToolbar"
        android:elevation="@dimen/dp_13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_back"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:padding="@dimen/dp_11"
            android:src="@drawable/ic_arrow_previous_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="@id/barrier_start"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/barrier_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.2" />

        <boilerplate.widget.customText.TextViewFont
            android:id="@+id/tv_title"
            style="@style/StyleMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_5"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dp_14"
            app:autoSizeMaxTextSize="@dimen/dp_14"
            app:autoSizeMinTextSize="@dimen/dp_12"
            app:autoSizeStepGranularity="@dimen/dp_1"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toTopOf="@id/tv_sub_title"
            app:layout_constraintEnd_toEndOf="@id/barrier_end"
            app:layout_constraintStart_toStartOf="@id/barrier_start"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="title" />

        <boilerplate.widget.customText.TextViewFont
            android:id="@+id/tv_sub_title"
            style="@style/StyleRegular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/color_A2FFFFFF"
            android:textSize="@dimen/dp_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/barrier_end"
            app:layout_constraintStart_toStartOf="@id/barrier_start"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            tools:text="sub title" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/barrier_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_search"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_35"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_search"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toStartOf="@id/img_menu"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@id/barrier_end"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_menu"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_35"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_hamburger"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_search"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctl_pin_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:elevation="@dimen/dp_12"
        android:minHeight="@dimen/dp_52"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ctl_toolbar"
        tools:visibility="visible">

        <LinearLayout
            android:id="@+id/ln_container_pin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline_pin"
            app:layout_constraintHeight="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@color/color_conversation_quote"
            app:layout_constraintBottom_toBottomOf="@id/ln_container_pin"
            app:layout_constraintEnd_toEndOf="@id/guideline_pin"
            app:layout_constraintStart_toStartOf="@id/guideline_pin"
            app:layout_constraintTop_toTopOf="@id/ln_container_pin" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_pin_message"
            android:layout_width="@dimen/dp_49"
            android:layout_height="@dimen/dp_22"
            android:layout_gravity="center"
            android:background="@drawable/bg_square_border_white"
            android:drawableEnd="@drawable/ic_arrow_down_grey"
            android:gravity="center"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline_pin"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlSymmetry"
            tools:text="+2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/frame_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/chat_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ctl_pin_message">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:reverseLayout="true"
            app:stackFromEnd="true" />

        <include
            android:id="@+id/view_no_data"
            layout="@layout/view_no_data" />
    </FrameLayout>

    <boilerplate.widget.customText.TextViewFont
        android:id="@+id/tv_count_new_message"
        style="@style/StyleRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/bg_button_white"
        android:drawableStart="@drawable/ic_arrow_down_grey"
        android:drawablePadding="@dimen/dp_8"
        android:elevation="@dimen/dp_2"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_5"
        android:paddingEnd="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_5"
        android:textColor="@color/color_1552DC"
        android:textSize="@dimen/dp_13"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/chat_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        tools:text="@string/new_message_count"
        tools:visibility="visible" />

    <boilerplate.widget.chatBox.ChatBox
        android:id="@+id/chat_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:elevation="@dimen/dp_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
