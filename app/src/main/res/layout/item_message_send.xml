<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:show_mode="pull_out"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp"
    tools:ignore="HardcodedText,SpUsage">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:gravity="end|center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_5"
        android:paddingEnd="@dimen/dp_15">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_marginEnd="@dimen/dp_5"
            android:padding="@dimen/dp_5"
            app:srcCompat="@drawable/ic_quote" />

        <boilerplate.widget.customText.TextViewFont
            style="@style/StyleRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trả lời" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ln_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@drawable/bg_message_send"
            android:elevation="@dimen/dp_2"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <LinearLayout
                android:id="@+id/ln_forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible" />

            <LinearLayout
                android:id="@+id/ln_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="@dimen/dp_5"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible" />

            <LinearLayout
                android:id="@+id/ln_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible" />

            <boilerplate.widget.customText.TextViewExpand
                android:id="@+id/tv_message_content"
                style="@style/StyleRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="end|center_vertical"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_sms"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_8"
                    android:layout_marginStart="@dimen/dp_8"
                    android:src="@drawable/ic_sms_message"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_email"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_8"
                    android:layout_marginStart="@dimen/dp_8"
                    android:src="@drawable/ic_email_message"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_star"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_8"
                    android:src="@drawable/ic_star_orange"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <boilerplate.widget.customText.TextViewFont
                    android:id="@+id/tv_message_time"
                    style="@style/StyleRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:textColor="@color/colorHint"
                    android:textSize="@dimen/dp_12"
                    tools:text="16:00" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_reaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_message_time">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_reaction"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginStart="@dimen/dp_5"
                    android:background="@drawable/bg_circle_border"
                    android:padding="@dimen/dp_5"
                    app:srcCompat="@drawable/ic_like" />

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/ln_icon_reaction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_message_reaction"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/dp_5"
                        android:paddingTop="@dimen/dp_2"
                        android:paddingEnd="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_2"
                        android:visibility="gone" />
                </HorizontalScrollView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/bg_message_status"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_5"
            android:paddingTop="@dimen/dp_2"
            android:paddingEnd="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_2"
            android:visibility="gone"
            tools:visibility="visible">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_status"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_3"
                tools:src="@drawable/ic_check" />

            <boilerplate.widget.customText.TextViewFont
                android:id="@+id/tv_message_status"
                style="@style/StyleRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dp_9"
                tools:text="@string/sent" />
        </LinearLayout>
    </LinearLayout>
</com.daimajia.swipe.SwipeLayout>
