<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DefaultStylesTheme">
        <attr name="AppToolbarStyle" format="reference" />
        <attr name="AppToolbarButtonStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="AppTextView">
        <attr name="customTypeface" format="reference" />
        <attr name="require_title" format="boolean" />
    </declare-styleable>

    <declare-styleable name="AppTextViewExpand" parent="AppTextView">
        <attr name="customTypeface" />
        <attr name="require_title" />
        <attr name="max_line" format="integer" />
        <attr name="show_text_collapse" format="boolean" />
        <attr name="enable_collapse" format="boolean" />
        <attr name="android:textSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="AppEditText">
        <attr name="customEditTypeface" format="string" />
    </declare-styleable>

    <declare-styleable name="PulseLayout">
        <attr name="pulse_period" format="integer" />
        <attr name="pulse_is_random" format="boolean" />
        <attr name="pulse_low_random" format="integer" />
        <attr name="pulse_high_random" format="integer" />
        <attr name="pulse_size" format="dimension" />
    </declare-styleable>

    <declare-styleable name="AppToolbar">
        <attr name="title" />
        <attr name="subtitle" />
        <attr name="titleTextColor" format="color" />
        <attr name="subTitleTextColor" format="color" />
        <attr name="titleTextAppearance" format="reference" />
        <attr name="subTitleTextAppearance" format="reference" />
        <attr name="menu" format="reference" />
        <attr name="backIcon" format="reference" />
        <attr name="hasBackNavigate" format="boolean" />
    </declare-styleable>

    <declare-styleable name="AppToolbarButton">
        <attr name="android:layout_width" />
        <attr name="android:layout_height" />
        <attr name="padding" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RoundedImageView">
        <attr name="radius" format="dimension" />
        <attr name="radius_top_left" format="dimension" />
        <attr name="radius_top_right" format="dimension" />
        <attr name="radius_bottom_left" format="dimension" />
        <attr name="radius_bottom_right" format="dimension" />
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="mutate_background" format="boolean" />
        <attr name="oval" format="boolean" />
        <attr name="android:scaleType" />
        <attr name="tile_mode">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="tile_mode_x">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="tile_mode_y">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
    </declare-styleable>
</resources>