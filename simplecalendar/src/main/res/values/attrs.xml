<?xml version="1.0" encoding="utf-8"?>
<resources>
    // attribute default của picker
    <attr name="wheel_reverse_value" format="boolean" />
    <attr name="wheel_show_future" format="boolean" />
    <attr name="wheel_show_current" format="boolean" />
    <attr name="wheel_over_scroll" format="boolean" />
    <attr name="wheel_cycle" format="boolean" />
    <attr name="wheel_width_type" format="enum">
        <enum name="fill" value="1" />
        <enum name="wrap" value="0" />
    </attr>

    // attribute riêng của từng picker
    <attr name="wheel_hour_12_format" format="boolean" />

    <attr name="wheel_day_of_week_from_sunday" format="boolean" />
    <attr name="wheel_day_show_only_number" format="boolean" />
    <attr name="wheel_day_show_today_text" format="string" />

    <attr name="wheel_month_only_number" format="boolean" />

    <attr name="wheel_type" format="enum">
        <enum name="DAY_OF_WEEK" value="0" />
        <enum name="DAY" value="1" />
        <enum name="MONTH" value="2" />
        <enum name="YEAR" value="3" />
        <enum name="HOUR" value="4" />
        <enum name="MINUTE" value="5" />
        <enum name="DAY_NIGHT" value="6" />
        <enum name="NONE" value="-1" />
    </attr>

    <declare-styleable name="DefaultWheelView">
        <attr name="wheel_type" />
        <attr name="wheel_cycle" />
        <attr name="wheel_over_scroll" />
        <attr name="wheel_show_current" />
        <attr name="wheel_show_future" />
        <attr name="wheel_reverse_value" />
        //-----------
        <attr name="wheel_hour_12_format" />
        <attr name="wheel_month_only_number" />
        <attr name="wheel_day_show_only_number" />
        <attr name="wheel_day_show_today_text" />
        <attr name="wheel_day_of_week_from_sunday" />
    </declare-styleable>

    <declare-styleable name="DefaultSimpleWheelView">
        <attr name="wheel_width_type" />
        <attr name="wheel_cycle" />
        <attr name="wheel_over_scroll" />
        <attr name="wheel_show_current" />
        <attr name="wheel_show_future" />
        <attr name="wheel_reverse_value" />
        //-----------
        <attr name="wheel_hour_12_format" />
        <attr name="wheel_month_only_number" />
        <attr name="wheel_day_show_only_number" />
        <attr name="wheel_day_show_today_text" />

        <attr name="wheel_day_format_style" format="string" />
        <attr name="wheel_show_curtain" format="boolean" />
    </declare-styleable>
</resources>